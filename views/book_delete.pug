extends layout 

block content 
    h1 #{title} : #{book.title} (#{book.author.name})

    if instancesOfBook.length 
        p #[strong Delete the following instances before deleting the book.]
        div(style='margin-left:20px;margin-top:20px')
            h4 Book instances
            ul
                each instance in instancesOfBook
                    li
                        a(href=instance.url) #{instance.id} 
                        | (#{instance.imprint}, #{instance.status})
    else 
        p Do you really want to delete this book?
        form(method='POST')
            div.form-group
                input#bookid.form-control(type='hidden', name='bookid', value=book._id )
            button.btn.btn-primary(type='submit') Delete